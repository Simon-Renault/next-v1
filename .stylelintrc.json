{
	"extends": "stylelint-config-recommended",
	"plugins": ["stylelint-scss", "stylelint-order"],
	"rules": {
		"order/order": ["custom-properties", "declarations"],
		"order/properties-order": ["width", "height"],
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"function",
					"return",
					"extends",
					"if",
					"error",
					"tailwind",
					"mixin",
					"include",
					"extend",
					"for",
					"each",
					"else",
					"while"
				]
			}
		],
		"scss/selector-no-redundant-nesting-selector": true,
		"block-no-empty": null
	}
}
